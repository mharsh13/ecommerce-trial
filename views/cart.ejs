<%- include('includes/header.ejs') %>


<div class="container">
    <div class="row">  
    <% cartItems.forEach((element) => { %> 
        <div class="col-lg-4 col-md-6 productBox">
            <img src="<%= element.imageUrl %> " class="img-thumbnail rounded img-fluid productImage">
            <div class="title">
            <h1><%= element.title %></h1>
            </div>
            <div class="price">
            <h3><%= "$  " + element.price + " X " + element.quantity + " = " + (element.quantity*element.price) %></h3>
            </div>
            <div class="description">
            <p><%= element.description.slice(0,100)+"..." %></p>
            </div>
            <div class="buttons">
            <a href="/products/<%= element.id %> "> <button class="btn btn-sm btn-info cartButton">Details   <i class="fas fa-shopping-bag"></i></button></a>
            <form action="/remove" method="POST">
            <button class="btn btn-sm btn-danger cartButton" type="submit">Remove  <i class="fas fa-trash"></i></button>
            <input type="hidden" name="productId" value="<%= element.id %>">
            </form>  
            </div>
        </div> 
    <% });  %>
</div>

<div class="card checkout">
    <div class="card-header">
      Checkout
    </div> 
    <div class="card-body">   
      <h5 class="card-title">Total: <%= totalPrice %>  </h5>
      <a href="#" class="btn btn-success">Proceed to Payment</a>
    </div>
</div>  


<%- include('includes/footer.ejs') %>
