<%- include('includes/header.ejs') %>

<div class="container">
        <div class="productBox">
            <img src="/<%= product.imageUrl %> " class="img-thumbnail rounded img-fluid productImage">
            <div class="title">
            <h1><%= product.title %></h1>
            </div>
            <div class="price">
            <h3><%="$   " +  product.price %></h3>
            </div>
            <div class="description">
            <p><%= product.description%></p>
            </div>
            <div class="buttons">
                <form action="/cart" method="POST">
                    <input type="hidden" value="<%= csrfToken %>" name="_csrf">
                    <button class="btn btn-sm btn-success cartButton" type="submit">Add to Cart  <i class="fas fa-shopping-cart"></i></button>
                    <input type="hidden" name="productId" value="<%= product.id %>">
                </form>   
            </div>
    </div>

<%- include('includes/footer.ejs') %>