    <body>
      <nav class="navbar navbar-light navbar-expand-lg" style="background-color: #e3f2fd;">
        <div class="container-fluid" id="top">
          <a class="navbar-brand" href="/">
          E-Commerce
          </a>
          <button
          class="navbar-toggler"
          type="button"
          data-toggle="collapse"
          data-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
              <!-- 6 -->
              <% if(isAuthenticated){ %>    
              <a class="nav-link" href="/products"> <button class="nav-item btn
                <% if(path==="/products"){ %>
                    btn-info
                   <% }else{ %>
                   btn-outline-info
                   btn-sm
                   <%} %> 
                ">PRODUCTS</button></a>
              <a class="nav-link" href="/addProducts"><button class="nav-item btn
                <% if(path==="/addProducts"){ %>
                    btn-info
                   <% }else{ %>
                   btn-outline-info
                   btn-sm
                   <%} %> 
                ">ADD PRODUCTS</button></a>
              <a class="nav-link" href="/cart"><button class="nav-item btn
                <% if(path==="/cart"){ %>
                    btn-info
                   <% }else{ %>
                   btn-outline-info
                   btn-sm
                   <%} %> 
                ">CART</button></a>  
              <a class="nav-link" href="/orders"><button class="nav-item btn
                <% if(path==="/orders"){ %>
                    btn-info
                   <% }else{ %>
                   btn-outline-info
                   btn-sm
                   <%} %> 
                ">ORDERS</button></a>
              <a class="nav-link" href="/editProducts"><button class="nav-item btn
                <% if(path==="/editProducts"){ %>
                    btn-info
                   <% }else{ %>
                   btn-outline-info
                   btn-sm
                   <%} %> 
                ">EDIT PRODUCTS</button></a>
            
                  <form action="/logout" method="POST">                
                    <a class="nav-link" href="/">
                      <input type="hidden" value="<%= csrfToken %>" name="_csrf">
                      <button class="nav-item btn btn-sm btn-outline-danger" type="submit">
                        Logout
                      </button>
                    </a>
                    </form>
       
                  <% } %> 
            </ul>
          </div>
        </div>
      </nav>