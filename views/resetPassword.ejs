<%- include('includes/header.ejs') %>

<div class="text-center authForm">
 
    <form class="form-signin" method="POST" action="/reset">
        <h1 class="h3 mb-3 font-weight-normal">Reset Password</h1>
        <label for="name" class="sr-only">Email</label>
        <input type="email" id="email" class="form-control" placeholder="Email" name="email" required>  
        <input type="hidden" value="<%= csrfToken %>" name="_csrf">
        <button class="btn btn-lg btn-info btn-block resetButton" type="submit">Reset Password</button>
      </form>
      <% if(errorMessage){ %>
        <div class="error-message"><h2><%= errorMessage %> </h2></div>
        <% } %>  
</div>


<%- include('includes/footer.ejs') %>
