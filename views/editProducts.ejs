<%- include('includes/header.ejs') %>


<div class="container">
    <div class="row">  
    <% for(let element of products) { %> 
        <div class="col-lg-4 col-md-6 productBox">
            <img src="/<%= element.imageUrl %> " class="img-thumbnail rounded img-fluid productImage">
            <div class="title">
            <h1><%= element.title %></h1>
            </div>
            <div class="price">
            <h3><%= "$  " + element.price %></h3>
            </div>
            <div class="description">
            <p><%= element.description.slice(0,100)+"..." %></p>
            </div>
            <div class="buttons">
            <a href="/products/edit/<%= element.id %> "> <button class="btn btn-sm btn-info cartButton">Edit   <i class="far fa-edit"></i></button></a>
            <form action="/delete" method="POST">
            <input type="hidden" value="<%= csrfToken %>" name="_csrf">
            <button class="btn btn-sm btn-danger cartButton" type="submit">Delete  <i class="fas fa-trash"></i></button>
            <input type="hidden" name="productId" value="<%= element.id %>">
            </form>  
            </div>
        </div> 
    <% }  %> 
</div>

<%- include('includes/footer.ejs') %>
