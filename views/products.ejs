<%- include('includes/header.ejs') %>

<div class="container">
    <div class="row">  
    <% products.forEach((element) => { %> 
        <div class="col-lg-4 col-md-6 productBox">
            <img src="<%= element.imageUrl %> " class="img-thumbnail rounded img-fluid productImage">
            <div class="title">
            <h1><%= element.title %></h1>
            </div>
            <div class="price">
            <h3><%= "$  " + element.price %></h3>
            </div>
            <div class="description">
            <p><%= element.description.slice(0,100)+"..." %></p>
            </div>
            <div class="buttons">
            <a href="/products/<%= element.id %> "> <button class="btn btn-sm btn-info cartButton">Details   <i class="fas fa-shopping-bag"></i></button></a>
            <form action="/cart" method="POST">
            <button class="btn btn-sm btn-success cartButton" type="submit">Add to Cart  <i class="fas fa-shopping-cart"></i></button>
            <input type="hidden" name="productId" value="<%= element.id %>">
            </form>  
            </div>
        </div> 
    <% });  %> 
    </div>

<%- include('includes/footer.ejs') %>
